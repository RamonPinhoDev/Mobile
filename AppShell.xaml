<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScheduleListUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ScheduleListUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#0000FE"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="white">


    <TabBar>


        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>

        <Tab Title="Agenda" Icon="agenda">
            <ShellContent ContentTemplate="{DataTemplate local:ScheduleListView}" />
        </Tab>

        <Tab Title="Menu" Icon="menu">
            <ShellContent ContentTemplate="{DataTemplate local:Menu}" />
        </Tab>


        <Tab Title="Notificações" Icon="notificacoes">
            <ShellContent ContentTemplate="{DataTemplate local:Notificacoes}" />
        </Tab>

    </TabBar>


</Shell>
